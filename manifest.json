{
    "manifest_version": 3,
    "name": "llmext",
    "version": "1.0",
    "description": "Extract and display webpage contents.",
    "action": {
      "default_popup": "popup.html",
      "default_title": "LLMEXT",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["activeTab", "scripting","storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "dist/background.js",
      "type": "module"
    },
    "options_page": "settings.html",  
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  